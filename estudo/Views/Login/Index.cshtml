@{
    ViewData["Title"] = "Login";
}

@model List<string>

<div class="login-box">

    <div class="login-logo" style="background-color: #fc9133; margin: 0;">
        <a href="#"><b>Crefaz </b>WEB</a>
    </div>

    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Faça login para acessar o sistema</p>

            <form action="../../index3.html" method="post">
                <div class="input-group mb-3">
                    <input type="email" class="form-control" placeholder="Matricula">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-key"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" class="form-control" placeholder="Senha">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember">
                            <label for="remember">
                                Lembre-me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Acessar</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <div class="social-auth-links text-center mb-3">
                @* <p>- OU -</p> *@
                @* <a href="#" class="btn btn-block btn-primary">
                    <i class="fab fa-facebook mr-2"></i> Acesse usando Facebook
                </a> *@
                @* <a href="#" class="btn btn-block btn-danger">
                    <i class="fab fa-google-plus mr-2"></i> Acesse Usando Google+
                </a> *@
            </div>
            <!-- /.social-auth-links -->

            <p class="mb-1" style="text-align: center">
                <a href="Login/Recuperar">Recuperação de senha</a>
            </p>
            @* <p class="mb-0">
                <a href="register.html" class="text-center">Registre-se</a>
            </p> *@
        </div>
        <!-- /.login-card-body -->
    </div>